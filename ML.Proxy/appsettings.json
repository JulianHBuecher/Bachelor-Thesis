{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.ms} {Level:u3}] {ThreadId} {MachineName} {EnvironmentUserName} {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "Elasticsearch",
        "Options": [
          {
            "AutoRegisterTemplate": "true"
          }
        ],
        "Args": {
          "nodeUris": "http://elasticsearch:9200",
          "indexFormat": "logstash-{0:yyyy.MM.dd}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ML.Proxy": {
    "Routes": {
      "angularSpa": {
        "ClusterId": "spaCluster",
        "Match": {
          "Path": "/{**catch-all}"
        }
      },
      "weatherApi": {
        "ClusterId": "weatherCluster",
        "Match": {
          "Path": "/weatherdata/{*any}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/weatherdata" }
        ]
      },
      "locationApi": {
        "ClusterId": "locationCluster",
        "Match": {
          "Path": "/locationdata/{*any}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/locationdata" }
        ]
      },
      "identityServer": {
        "ClusterId": "identityCluster",
        "Match": {
          "Path": "/identity/{*any}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      }
    },
    "Clusters": {
      "spaCluster": {
        "Destinations": {
          "spa": {
            "Address": "http://angular-webapp"
          }
        }
      },
      "weatherCluster": {
        "Destinations": {
          "weatherApi": {
            "Address": "http://weatherapi"
          }
        }
      },
      "locationCluster": {
        "Destinations": {
          "locationApi": {
            "Address": "http://locationapi"
          }
        }
      },
      "identityCluster": {
        "Destinations": {
          "identityServer": {
            "Address": "http://identityserver"
          }
        }
      }
    }
  },
  "Redis": {
    "Connection-String": "redis-requestcache:6379"
  }
}
